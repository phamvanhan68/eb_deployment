files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
        * * * * * root /usr/local/bin/ggcrawler_cronjob_root.sh

  "/usr/local/bin/ggcrawler_cronjob_root.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash

      echo "Running conrjob"
      find /var/app/current -name ggrawler_cronjob_sha.sh -exec {} \;
      exit 0

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/mycron.bak"
  remove_bak_files:
    command: "rm -f /usr/local/bin/*.bak"
